<div class="form">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2 my-2">
      <h1>Edit product</h1>
      <%= simple_form_for @product, url: suppliers_product_path, Method: :PUT  do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :price %>
          <%= f.input :category %>
          <%= f.input :production_quantity %>
          <%= f.input :minimum_order_quantity %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, value: "Update" %>
          <%= link_to "Back", suppliers_dashboard_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>