<div class="form">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2 my-2">
      <h1>Edit certification</h1>
      <%= simple_form_for @certification, url: suppliers_certification_path, mothod: :PUT  do |f| %>
        <div class="form-inputs">
          <%= f.input :number %>
          <%= f.input :category %>
          <%= f.input :listing_number %>
          <%= f.input :code %>
          <%= f.input :authority %>
          <%= f.input :start_date, label: "Start Date", as: :date, html5: true %>
          <%= f.input :expired_date, label: "Expired Date", as: :date, html5: true %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, value: "Update" %>
          <%= link_to "Back", products_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>