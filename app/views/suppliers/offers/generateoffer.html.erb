<head>
  <meta http-equiv='Content-Type' content='text/html; charset=UTF-8' />
</head>
<body>
  <div id="page-wrap">
    <textarea id="header">Quote</textarea>
    <div id="identity">
      <textarea id="address">
        <%= @offer.user.name %>
        <%= @offer.user.email %>
        <%= @offer.user.country %>
        Phone: (410) 410-4100</textarea>
      <div id="logo">
        <div id="logoctr">
        </div>
        <div id="logohelp">
        </div>
        <%= image_tag "logo.png", width: 200, height: 150 %>
      </div>
    </div>
    <div style="clear:both"></div>
    <div id="customer">
      <table id="meta">
        <tr>
          <td class="meta-head">Qutoe #</td>
          <td>
            <textarea>410410410</textarea>
          </td>
        </tr>
        <tr>
          <td class="meta-head">Date</td>
          <td>
            <textarea id="date"><%= @offer.approved_date.strftime("%B %d, %Y") %></textarea>
          </td>
        </tr>
      </table>
    </div>
    <table id="items">
      <tr>
        <th>Item</th>
        <th>Description</th>
        <th>Unit Cost</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
      <tr class="item-row">
        <td class="item-name">
          <div class="delete-wpr">
            <% @offer.products.each do |product| %>
              <textarea><%= product.name %></textarea>
            <% end %>
          </div>
        </td>
        <td class="description">
          <% @offer.products.each do |product| %>
            <textarea><%= product.name %></textarea>
          <% end %>
        </td>
        <td>
          <% @offer.products.each do |product| %>
            <textarea class="cost"><%= product.price %></textarea>
          <% end %>
        </td>
        <td>
          <% @offer.products.each do |product| %>
            <textarea class="qty"><%= product.minimum_order_quantity %></textarea>
          <% end %>
        </td>
        <td>
          <% @offer.products.each do |product| %>
            <textarea class="qty"><%= product.name %></textarea>
          <% end %>
        </td>
      </tr>
      <tr class="item-row">
      </tr>
      <tr class="item-row">
      </tr>
      <tr>
        <td colspan="2" class="blank"> </td>
        <td colspan="2" class="total-line">Total</td>
        <td class="total-value">
          <% @offer.products.each do |product| %>
            <div id="total"><%= product.name %></div>
          <% end %>
        </td>
      </tr>
    </table>
    <div id="terms">
      <h5>Terms</h5>
      <p>All Right Reserved by VeraCity</p>
    </div>
  </div>
</body>