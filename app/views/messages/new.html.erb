<div class="row">
  <div class="col-xs-12 col-sm-8 offset-sm-2 my-2">
    <h1>Send a Message</h1>
    <%= simple_form_for [@product, @message] do |f| %>
      <div class="form-inputs">
        <%= f.input :title %>
        <%= f.input :content %>
      </div>
      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>