<div class="messages-container">
  <div class="flash flash-primary alert alert-dismissible fade show" role="alert">
    <span><strong>Yay!</strong> ğŸ‰ your message has been submitted successfully!</span>
    <a data-dismiss="alert" aria-label="Close">
      <i class="fas fa-times"></i>
    </a>
  </div>
  <div>
  </div>
  <div class="messages row">
    <% if @messages.nil? %>
      <p>Hmm.. Maybe you should message someone</p>
    <% else %>
      <table class="table table-hover">
        <% @messages.each do |message| %>
          <tbody>
            <tr>
              <td><%= message.created_at.strftime("%m-%e-%y %H:%M") %></td>
              <% if message.outgoing?(current_user) %>
                <td>Outgoing: </td>
              
                <td><%= message.receiver.name %></td>
                <td>â<%= message.title %> </td>
              <% else %>
                <td>Incoming</td>
                
                <td><%= message.sender.name %></td>
                <td><%= message.title %> </td>
              <% end %>
              <td>About: <strong><%= message.product.name %></strong> </td>
              <td><%= link_to "More", by_product_messages_path(product_id: message.product_id, interlocutors: [message.sender_id, message.receiver_id]) %></td>
            </tr>
          </tbody>
        </div>
      <% end %>
    </table>
  <% end %>
</div>
</div>
<div>
  <button onclick="window.location.href='/purchasers/dashboard'" class="btn btn-primary">View my Dashboard</button>
</div>