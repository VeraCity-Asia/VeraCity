<div class="messages-bg">
  <div class="thankyou">
    <%= image_tag 'thankyou .jpg', size: '80x60'%>
  </div>

  <h4><strong>Messages</strong></h4>

  <div class="message-container">
    <div class="messages row">
    <% if @messages.nil? %>
      <p>Hmm.. Maybe you should message someone</p>
    <% else %>
      <% @products.each do |product| %>
        <div>
          <%= product.name %>
        </div>
        <% product.messages.each do |message| %>
        <div class="card">
          <div>
            <%= message.title %>
          </div>
          <div>
            <%= message.content %>
          </div>
        <% end %>
      <% end %>
    <% end %>
      </div>
    </div>
  </div>
</div>

<div>
  <button onclick="window.location.href='/purchasers/dashboard'" class="btn btn-primary">View my Dashboard</button>
</div>