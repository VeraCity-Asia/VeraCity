

    <h1><strong>Contact VeraCity</strong></h1>
    <p> For questions relating supplier,verification and general issues</p>

   <div class="contact-us">
     <div class="container">
       <div class="row">
         <div class="col-6">
           <form>
              <div class="form-group">
                 <label for="exampleFormControlSelect1">You are</label>
                    <select class="form-control" id="exampleFormControlSelect1">
                      <option>Visitor</option>
                      <option>Purchaser</option>
                      <option>Supplier</option>
                    </select>
                  </div>

                  <div class="form-group">
                  <label for="exampleFormControlInput1">Name</label>
                  <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="John Smith">
                  </div>

                  <div class="form-group">
                  <label for="exampleFormControlInput1">Email address</label>
                  <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="johnsmith20@gmail.com">
                  </div>

                  <div class="form-group">
                    <label for="exampleFormControlInput1">Title</label>
                  <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Please let us know your what your question is regarding">
                  </div>

                  <div class="form-group">
                    <label for="exampleFormControlTextarea1">Content</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Plese describe your questions or issue here "></textarea>
                  </div>

                  <div>
                    <button type="button" class="btn btn-dark">Submit</button>
                 </div>
            </form>
          </div>


     <div class="col-6">
      <%= image_tag 'contactus.png', size: '350x320', style: 'margin-bottom: 20px'%>
      <div class="d-flex justify-content-center">
        <h2><i class="fas fa-envelope"></i>support@veracity.com</h2>
      </div>

      <div class="d-flex justify-content-around">
        <h2><i class="fab fa-weixin"></i></i>VeracityAsia support</h2>
      </div>
        <%= image_tag 'official.jpeg', size: '90x80' %>
      </div>

     </div>
</div>
</div>
</div>
