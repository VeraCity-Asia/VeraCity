<div class="navbar-veracity">
  <div class="navbar-left">
    <%= link_to root_path do %>
      <%= image_tag 'logo.png' %>
    <% end %>
  </div>
  <div class="navbar-right">
    <% if user_signed_in? %>
      <%= link_to "About", about_path, class: "nav-link" %>
      <%= link_to "Contact Us", contact_path, class: "nav-link" %>
      <%= image_tag "avatar.png", id: "navbarDropdown", class: "avatar-img", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <% if current_user.user_type == "supplier"%>
          <%= link_to "Dashboard", suppliers_dashboard_path, class: "dropdown-item" %>
        <% else %>
          <%= link_to "Dashboard", purchasers_dashboard_path, class: "dropdown-item" %>
        <% end  %>
        <%= link_to "Inbox", messages_path, class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    <% else %>
      <%= link_to "About", about_path, class: "nav-link" %>
      <%= link_to "Products", products_path, class: "nav-link" %>
      <%= link_to "Contact Us", contact_path, class: "nav-link" %>
      <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      <%= link_to "Register", welcome_path, class: "nav-link" %>
    <% end %>
  </div>
</div>